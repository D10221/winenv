#!/usr/bin/env bash

# usage './libraryfolders ~/.local/share/Steam/config/libraryfolders.vdf'

# Meta
_name=$(basename $0)
_dir="$(
    cd -- "$(dirname "$0")" >/dev/null 2>&1
    pwd -P
)"
_path="$basedir/$fname"
libraryfolders=${1:-$HOME/.local/share/Steam/config/libraryfolders.vdf}
libs=$(cat $libraryfolders |vdf2json |jq '.libraryfolders[].path?')
read -d " " -ra A <<<$libs
for p in "${A[@]}"; do
  echo $p|tr -d \"
done
